 <EditText

 android:id="@+id/editTextMobile"

 android:layout_width="match_parent"

 android:layout_height="wrap_content"

 android:hint="Enter mobile number" />

 <Button

 android:id="@+id/buttonCalculate"
 android:layout_width="match_parent"

 android:layout_height="wrap_content"

 android:text="Calculate bill" />

 <TextView

